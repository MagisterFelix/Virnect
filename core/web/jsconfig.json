{
    "compilerOptions": {
        "target": "es2022",
        "allowJs": true,
        "checkJs": false,
        "moduleResolution": "node",
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@api/*": [
                "src/api/*"
            ],
            "@context/*": [
                "src/context/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}